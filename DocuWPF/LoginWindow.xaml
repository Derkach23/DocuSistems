<Window x:Class="DocuWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <TextBox Name="LoginBox" Text="" Margin="0,0,0,5" GotFocus="LoginBox_GotFocus" LostFocus="LoginBox_LostFocus" />
                <TextBlock Name="LoginPlaceholder" Text="Логин" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>
            <Grid Margin="10">
                <PasswordBox Name="PasswordBox" Margin="0,0,0,5" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" />
                <TextBlock Name="PasswordPlaceholder" Text="Пароль" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>
            <Button Content="Войти" Click="LoginButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
