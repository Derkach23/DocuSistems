<Window x:Class="DocuWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления документами" Height="450" Width="800">
    <DockPanel>
        <!-- Сайдбар -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="LightGray">
            <Button Content="Документы" Click="DocumentsButton_Click" Margin="10"/>
            <Button Content="Категории" Click="CategoriesButton_Click" Margin="10"/>
            <Button Content="Поиск" Click="SearchButton_Click" Margin="10"/>
        </StackPanel>

        <!-- Основной контент -->
        <ContentControl Name="MainContent" />
    </DockPanel>
</Window> 
