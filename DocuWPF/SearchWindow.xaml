<Window x:Class="DocuWPF.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск документов" Height="200" Width="400">
    <Grid>
        <TextBox Name="KeywordBox" Margin="10" Text="Ключевое слово"/>
        <DatePicker Name="DatePicker" Margin="10,40,10,10"/>
        <ComboBox Name="TypeComboBox" Margin="10,80,10,10">
            <ComboBoxItem Content="Отчеты" />
            <ComboBoxItem Content="Нормативы" />
            <ComboBoxItem Content="Инструкции" />
        </ComboBox>
        <Button Content="Поиск" Click="SearchButton_Click" Margin="10,150,93,10"/>
        <Button Content="Назад" Click="BackButton_Click" Margin="307,150,10,9"/>
    </Grid>
</Window>
