<Window x:Class="DocuWPF.Views.DocumentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор документа" Height="300" Width="500">
    <Grid>
        <TextBox Name="TitleBox" Text="Заголовок" Margin="10"/>
        <TextBox Name="ContentBox" Text="Содержание" Margin="10" AcceptsReturn="True"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
    </Grid>
</Window>
